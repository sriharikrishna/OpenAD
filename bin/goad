import os
import sys

path = os.path.abspath(sys.argv[0])
print path
dir =  os.path.dirname(path)
script_name = os.path.basename(sys.argv[0])
toolsdir = os.path.join(dir,'../tools')
realscript = os.path.join(toolsdir,script_name,script_name)

# complain if target script is not present
if not os.access(realscript,os.X_OK):
  sys.stderr.write(realscript+" does not exist or is not executable.")
  sys.exit()

realcmd = realscript
 
for arg in sys.argv[1:]:
  realcmd += " "+arg

os.system(realcmd)
sys.stderr.write("couldn't execute "+realscript+"\n")
sys.exit()
