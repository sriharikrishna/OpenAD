import os
import sys

path = os.path.abspath(sys.argv[0])
dir =  os.path.abspath(os.path.dirname(path))
script_name = os.path.basename(sys.argv[0])
toolsdir = os.path.abspath(os.path.join(dir,'../tools'))
realscript = os.path.join(toolsdir,script_name,script_name)
os.chdir(os.path.dirname(realscript))
realcmd = os.path.basename(realscript)

# complain if target script is not present
if not os.access(realcmd,os.X_OK):
  sys.stderr.write(realscript+" does not exist or is not executable.\n")
  sys.exit()

for arg in sys.argv[1:]:
  realcmd += " "+arg

ret = os.system("./"+realcmd)
if ret != 0:
  sys.stderr.write("couldn't execute "+realscript+"\n")
sys.exit()
